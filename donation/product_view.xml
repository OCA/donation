<?xml version="1.0" encoding="utf-8"?>

<openerp>
<data>

<record id="product_search_form_view" model="ir.ui.view">
    <field name="name">donation.product.product.search</field>
    <field name="model">product.product</field>
    <field name="inherit_id" ref="product.product_search_form_view"/>
    <field name="arch" type="xml">
        <filter name="filter_to_sell" position="after">
            <filter name="filter_to_donation" string="Donation" domain="[('donation_ok','=',1)]"/>
        </filter>
    </field>
</record>

<record id="product_donation_form" model="ir.ui.view">
    <field name="name">donation.product.product.form</field>
    <field name="model">product.product</field>
    <field name="inherit_id" ref="product.product_normal_form_view"/>
    <field name="arch"  type="xml">
        <div name="options" position="inside">
            <field name="donation_ok" on_change="donation_ok_change(donation_ok, context)"/>
            <label for="donation_ok"/>
        </div>
    </field>
</record>

</data>
</openerp>
