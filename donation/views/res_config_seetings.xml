<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.donation</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="99"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Donation" string="Donation" data-key="donation" groups="donation.group_donation_manager">
                    <div id="donation_module">
                        <h2>Donation Modules</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box" title="This default value is applied to any new product created. This can be changed in the product detail form.">
                                <div class="o_setting_left_pane">
                                    <field name="module_donation_sale" confirm=""/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="module_donation_sale"/>
                                    <div class="text-muted">
                                        Manage donations in sale orders
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-12 col-md-6 o_setting_box">

                                <div class="o_setting_left_pane">
                                    <field name="module_donation_direct_debit" confirm=""/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="module_donation_direct_debit"/>
                                    <div class="text-muted">
                                        Auto-generate direct debit order on donation validation
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="module_donation_recurring" confirm=""/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="module_donation_recurring"/>
                                    <div class="text-muted">
                                        Manage recurring donations
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="module_donation_bank_statement" confirm=""/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="module_donation_bank_statement"/>
                                    <div class="text-muted">
                                        Creates donation from unreconciled bank statement lines
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="action_donation_config_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="res_config_settings_view_form"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'donation'}</field>
    </record>

    <menuitem id="menu_donation_settings"
        name="Settings"
        parent="donation_config_menu"
        sequence="0"
        action="action_donation_config_settings"
        groups="base.group_system"/>

</odoo>

